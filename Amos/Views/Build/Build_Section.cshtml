@model Amos.Models.Section

@if (Model.SortOrder == 0)
{
<li class="section" data-id="@Model.SectionId">
    @getGuts()
    <ul class="chapters">
        <li class="new">
            <a class="newItem" data-type="chapter" href="javascript:void(0)">new chapter</a>
        </li>
    </ul>
</li>
}
else
{
    @getGuts()
}

@helper getGuts()
    {
        <div class="info-block">
            <div class="arrow-block">
                <i class="fa fa-sort-up"></i>
                <i class="fa fa-sort-down"></i>
                <i class="fa fa-minus"></i>
            </div>
            <div class="info-name">
                <div class="info-name-text">Section 1</div>
                <input type="text" value="@Model.Name" class="partName" />
            </div>
            
            <div class="action-menu">
                <a href="javascript:void(0)" onclick="performActionMenu(this)" data-type="section">delete</a>
            </div>
        </div>
}

