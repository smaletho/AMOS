@model Amos.Models.ImportBookModel

@{
    ViewBag.Title = "Import Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Import Book</h2>

@using (Html.BeginForm("DoImportBook", "Build", FormMethod.Post, new
{ enctype = "multipart/form-data" }))
{
<div class="input-group" style="width:50%;">
    @Html.TextBoxFor(m => m.File, new { type = "file", @class = "form-control" })
    <span class="input-group-btn">
        <button class="btn btn-primary" type="submit">Import</button>
    </span>
</div>
    
    <p class="help-block">
        Select a .zip file containing an exported AMOS book.
    </p>


    @*<input class="btn btn-default" type="submit" value="submit" />*@
}

    <ul style="margin-top:20px">
        @foreach (var item in Model.ResponseList)
        {
            <li>@item</li>
        }
    </ul>

@Html.ActionLink("return to book list", "ListBooks")