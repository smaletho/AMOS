@model Amos.Models.Chapter

@if (Model.SortOrder == 0)
{
<li class="chapter" data-id="@Model.ChapterId">
    @getGuts()
    <ul class="pages">
        <li class="new">
            <a class="newItem" data-type="page" href="javascript:void(0)">new page</a>
        </li>
    </ul>
</li>
}
else
{
    @getGuts();
}


@helper getGuts()
    {
        <div class="info-block">
            <div class="arrow-block">
                <i class="fa fa-sort-up"></i>
                <i class="fa fa-sort-down"></i>
                <i class="fa fa-minus"></i>
            </div>
            <div class="info-name">
                <div class="info-name-text">Chapter 1</div>
                <input type="text" value="@Model.Name" class="partName" />
            </div>
            <div class="action-menu">
                <a href="javascript:void(0)" onclick="performActionMenu(this)" data-type="chapter">delete</a>
            </div>
        </div>
}