@model Amos.Models.PageViewModel

<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>AMOS - Viewer</title>
    <!--stylesheets-->
    <link rel="stylesheet" href="~/fonts/FiraSans/Fonts.css">
    <link href="~/Content/css/themes.css" rel="stylesheet" />
    <link href="~/Content/css/base.css" rel="stylesheet" />
    <link href="~/Content/css/pageContent.css" rel="stylesheet" />
    <link href="~/Content/css/viewer.css" rel="stylesheet" />

    <!--scripts-->
    <script src="~/Content/js/jquery-3.3.1.min.js"></script>
    <script>
        var ConfigXml;
        var PageContent = [];
        var ScaleRatio = 1;
        var CurrentLocation;
        var URL_Content = '@Url.Content("~/")';
        var URL_GetPage = '@Url.Action("GetPage", new { id = Model.PageId })';
        var URL_UploadAsset = '@Url.Action("UploadAsset")';
        var URL_ViewPage = '@Url.Action("ViewPage", new { id = Model.PageId })';
        var URL_ViewEditor = '@Url.Action("ViewEditor", new { id = Model.PageId })';
        var URL_ViewAssets = '@Url.Action("ViewAssets", new { id = Model.PageId })';
        var URL_SavePage = '@Url.Action("SavePage")';
        var URL_GoHome = '@Url.Action("Index", "Home")';


    </script>
    <script src="~/Content/js/navigation.js"></script>
    <script src="~/Content/js/base.js"></script>
    <script src="~/Content/js/render.js"></script>
    <script src="~/Content/js/shared.js"></script>
    <script src="~/Content/js/userTrack.js"></script>
    <script src="~/Content/js/offline.js"></script>
    <script src="~/Content/js/toc.js"></script>
    <script src="~/Content/js/viewer.js"></script>
    <!-- For offline switch the src for each script, and include offline.js -->
</head>

<body>
    <div id="main-window">

        <div id="content">
            <div id="header">
                <div id="top-bar">
                    <table style="display:table;margin:0 auto 0;padding-top:10px">
                        <tr>
                            <td width="265" style="text-align:center">
                                <a href="@Url.Action("ListPages")">
                                    Back to page list
                                </a>
                            </td>
                            <td width="265" style="text-align:center">
                                <a href="@Url.Action("ViewEditor", new { id = Model.PageId })">
                                    Back to Editor
                                </a>
                            </td>
                            <td width="265" style="text-align:center">Page name: <b>@Model.PageName</b></td>
                            <td width="265" style="text-align:center"><a href="javascript:void(0)" id="shell-assets">view assets</a></td>
                            <td width="265" style="text-align:center"><span id="xy-coordinates">Top: 0, Left: 0</span><br /></td>
                            <td width="265" style="text-align:center">
                                <label>
                                    <input type="checkbox" id="grid-check" />
                                    Show Grid
                                </label>
                            </td>
                        </tr>
                    </table>

                </div>
                <div id="sections">
                    <div id="section-list"></div>
                </div>
                <div id="chapters">
                    <div id="chapter-list"></div>
                </div>
            </div>

            <div id="page-content" style="border:1px solid black;" class="content-window">
                <div id="definitionWindow"></div>

            </div>
            <div id="grid-window">
            </div>

            <div id="footer">
                @Html.HiddenFor(x => x.PageId)
                @Html.HiddenFor(x => x.PageName)
            </div>
        </div>


    </div>
</body>
</html>