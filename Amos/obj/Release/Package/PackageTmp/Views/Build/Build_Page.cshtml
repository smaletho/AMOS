@model Amos.Models.Build_PageModel

@{string pageIdentifier = "M" + Model.ModuleCount + ".S" + Model.SectionCount + ".C" + Model.ChapterCount + ".P" + Model.PageCount; }
<div class="page row" data-myid="@Model.Page.PageId" data-parentid="@Model.Page.ParentId">
    <div class="col-md-1 upper-highlight-module">
        <i class="fa fa-level-up fa-flip-horizontal"></i>
    </div>
    <div class="col-md-1 upper-highlight-section">
        <i class="fa fa-level-up fa-flip-horizontal"></i>
    </div>
    <div class="col-md-1 upper-highlight-chapter">
        <i class="fa fa-level-up fa-flip-horizontal"></i>
    </div>
    <div class="col-md-1 sortControls">
        <i class="fa fa-caret-up"></i>
        <i class="fa fa-caret-down"></i>
    </div>
    <div class="col-md-6 lower-highlight">
        <div class="input-group input-group-sm">
            <span class="input-group-addon" id="pageAddon_@ViewBag.Count">@pageIdentifier</span>
            <input value="@Model.Page.Name" type="text" class="itemTitle form-control mw-100" placeholder="New Page" aria-label="Page" aria-describedby="pageAddon_@ViewBag.Count">
            <div class="input-group-btn">
                <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    action <span class="caret"></span>
                </button>
                <ul class="dropdown-menu dropdown-menu-right">
                    @if (Model.Page.SortOrder == 0)
                    {
                        <li>
                            <a data-id="@Model.Page.PageId" data-type="page" onclick="performActionMenu(this)">import</a>
                        </li>
                        <li>
                            <a data-id="@Model.Page.PageId" data-type="page" onclick="performActionMenu(this)">delete</a>
                        </li>
                    }
                    else
                    {
                        <li><a data-id="@Model.Page.PageId" data-type="page" onclick="performActionMenu(this)">preview</a></li>
                        <li><a data-id="@Model.Page.PageId" data-type="page" onclick="performActionMenu(this)">delete</a></li>
                        <li><a data-id="@Model.Page.PageId" data-type="page" onclick="performActionMenu(this)">edit</a></li>
                    }

                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-2 lower-highlight dropright">

    </div>
</div>
