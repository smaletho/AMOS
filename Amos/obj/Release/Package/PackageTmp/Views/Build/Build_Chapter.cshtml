@model Amos.Models.S_Chapter


<div class="chapter row" data-myid="@Model.ChapterId" data-parentid="@Model.ParentId">
    <div class="col-md-1 upper-highlight-module">
        <i class="fa fa-level-up fa-flip-horizontal"></i>
    </div>
    <div class="col-md-1 upper-highlight-section">
        <i class="fa fa-level-up fa-flip-horizontal"></i>
    </div>
    <div class="col-md-1 sortControls">
        <i class="fa fa-caret-up"></i>
        <i class="fa fa-caret-down"></i>
    </div>
    <div class="col-md-7 lower-highlight">
        <div class="input-group input-group-sm">
            <span class="input-group-addon" id="chapterAddon_@ViewBag.Count">C @ViewBag.Count</span>
            <input value="@Model.Name" type="text" class="itemTitle form-control mw-100" placeholder="New Chapter" aria-label="Chapter" aria-describedby="chapterAddon_@ViewBag.Count">
            <div class="input-group-btn">
                <button class="btn btn-default" type="button" data-type="chapter" onclick="performActionMenu(this)">delete</button>
            </div>
        </div>
    </div>
    <div class="col-md-2 lower-highlight">
        <a href="javascript:void(0)" onclick="addNewItem('page', this);">add page</a>
    </div>
</div>
