@model IEnumerable<Amos.Models.Book>

@{
    ViewBag.Title = "ListBooks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List Books</h2>

<p>
    @Html.ActionLink("Create New Book", "Create")
</p>
<p>
    @Html.ActionLink("Create New Page", "ViewEditor", new { id=0 })
</p>
<p>
    @Html.ActionLink("Import Book", "ImportBook")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Published)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Version)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifyDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.OrderByDescending(x => x.ModifyDate)) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Published)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Version)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedBy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifiedBy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifyDate)
        </td>
        <td>
            <div class="dropdown">
                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Book Actions
                </a>

                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <a class="dropdown-item" href="@Url.Action("Manage", new { id = item.BookId })">Manage/Edit</a>
                    <a class="dropdown-item" href="javascript:void(0)" onclick="confirmDelete(@item.BookId)">Delete</a>
                    <a class="dropdown-item" href="@Url.Action("Duplicate", new { id = item.BookId })">Duplicate</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="@Url.Action("Export", new { id = item.BookId })">Export Data</a>
                    <a class="dropdown-item" href="@Url.Action("Download", new { id = item.BookId })">Download</a>
                </div>
            </div>



        </td>
    </tr>
}

</table>

@section scripts{
<script>
    function confirmDelete(id) {
        if (confirm("Would you like to delete this book?")) {
            var url = '@Url.Action("Delete", new { id = 99999 })';
            url = url.replace("99999", id);
            window.location = url;
        }
    }
</script>    





}